@page "/"
@model WebApplicationTP2.Pages.PessoaModel
@{
    ViewData["Title"] = "Pessoas";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>CPF</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.PessoaList)
        {
            <tr>
                <td>@p.Nome</td>
                <td>@p.Idade</td>
                <td>@p.Cpf</td>
            </tr>
        }
    </tbody>
    <p>Contando a lista: @Model.PessoaList.Count</p>
</table>
